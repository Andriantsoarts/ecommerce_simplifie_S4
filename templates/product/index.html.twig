{% extends 'dashboard/index.html.twig' %} {% block title %}Product index{%
endblock %} {% block content %}
<div class="py-6 px-4 sm:px-6 lg:px-8">
  <h1 class="text-3xl font-bold text-gray-900 mb-4">Product Index</h1>

  <div class="mb-4">
    <input
      id="search-input"
      type="text"
      placeholder="Search products..."
      class="w-full max-w-md px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-950"
    />
  </div>
  <a
    href="{{ path('app_product_new') }}"
    class="mt-6 mb-6 inline-block px-6 py-2 bg-yellow-500 text-white font-semibold rounded-lg hover:bg-blue-950 transition-all duration-300"
  >
    Create New
  </a>

  <div class="overflow-x-auto">
    <table class="min-w-full bg-white border border-gray-200 rounded-lg shadow">
      <thead class="bg-gray-100">
        <tr>
          <th
            class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer"
            data-sort="id"
          >
            ID <span class="sort-arrow"></span>
          </th>
          <th
            class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer"
            data-sort="name"
          >
            Product Name <span class="sort-arrow"></span>
          </th>
          <th
            class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
          >
            Slug
          </th>
          <th
            class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer"
            data-sort="price"
          >
            Price <span class="sort-arrow"></span>
          </th>
          <th
            class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer"
            data-sort="quantity"
          >
            Quantity <span class="sort-arrow"></span>
          </th>
          <th
            class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
          >
            Description
          </th>
          <th
            class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer"
            data-sort="created"
          >
            Created At <span class="sort-arrow"></span>
          </th>
          <th
            class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer"
            data-sort="updated"
          >
            Updated At <span class="sort-arrow"></span>
          </th>
          <th
            class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
          >
            Actions
          </th>
        </tr>
      </thead>
      <tbody id="product-table">
        {% for product in products %}
        <tr class="hover:bg-gray-50">
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
            {{ product.id }}
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
            {{ product.productName }}
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
            {{ product.slug }}
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
            {{ product.price }}
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
            {{ product.quantity }}
          </td>
          <td class="px-6 py-4 text-sm text-gray-900">
            {{ product.description }}
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
            {{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
            {{ product.updatedAt ? product.updatedAt|date('Y-m-d H:i:s') : '' }}
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm">
            <a
              href="{{ path('app_product_show', { id: product.id }) }}"
              class="text-blue-950 hover:underline mr-4"
              >Show</a
            >
            <a
              href="{{ path('app_product_edit', { id: product.id }) }}"
              class="text-blue-950 hover:underline"
              >Edit</a
            >
          </td>
        </tr>
        {% else %}
        <tr>
          <td colspan="9" class="px-6 py-4 text-center text-sm text-gray-500">
            No records found
          </td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>
{% endblock %}
