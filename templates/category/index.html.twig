{% extends 'dashboard/index.html.twig' %} {% block title %}Category index{%
endblock %} {% block content %}
<div class="py-6 px-4 sm:px-6 lg:px-8">
  <h1 class="text-3xl font-bold text-gray-900 mb-4">Category Index</h1>

  <div class="mb-4">
    <input
      id="search-input"
      type="text"
      placeholder="Search categories..."
      class="w-full max-w-md px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-950"
    />
  </div>

  <a
    href="{{ path('app_category_new') }}"
    class="mt-6 mb-6 inline-block px-6 py-2 bg-yellow-500 text-white font-semibold rounded-lg hover:bg-blue-950 transition-all duration-300"
  >
    Create New
  </a>

  <div class="overflow-x-auto">
    <table class="min-w-full bg-white border border-gray-200 rounded-lg shadow">
      <thead class="bg-gray-100">
        <tr>
          <th
            class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer"
            data-sort="id"
          >
            ID <span class="sort-arrow"></span>
          </th>
          <th
            class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer"
            data-sort="name"
          >
            Category Name <span class="sort-arrow"></span>
          </th>
          <th
            class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
          >
            Category Slug
          </th>
          <th
            class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer"
            data-sort="created"
          >
            Created At <span class="sort-arrow"></span>
          </th>
          <th
            class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider cursor-pointer"
            data-sort="updated"
          >
            Updated At <span class="sort-arrow"></span>
          </th>
          <th
            class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
          >
            Actions
          </th>
        </tr>
      </thead>
      <tbody id="category-table">
        {% for category in categories %}
        <tr class="hover:bg-gray-50">
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
            {{ category.id }}
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
            {{ category.categoryName }}
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
            {{ category.categorySlug }}
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
            {{ category.createdAt ? category.createdAt|date('Y-m-d H:i:s') : '' }}
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
            {{ category.updatedAt ? category.updatedAt|date('Y-m-d H:i:s') : '' }}
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm">
            <a
              href="{{ path('app_category_show', { id: category.id }) }}"
              class="text-blue-950 hover:underline mr-4"
              >Show</a
            >
            <a
              href="{{ path('app_category_edit', { id: category.id }) }}"
              class="text-blue-950 hover:underline"
              >Edit</a
            >
          </td>
        </tr>
        {% else %}
        <tr>
          <td colspan="6" class="px-6 py-4 text-center text-sm text-gray-500">
            No records found
          </td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>
{% endblock %}
