<nav class="bg-blue-950 text-white px-6 py-4 flex justify-between items-center">
  <!-- Logo -->
  <a href="#" class="text-2xl font-bold">LOREM</a>

  <!-- Navigation Links (Desktop) -->
  <div class="hidden md:flex space-x-6">
    <a href="#" class="hover:text-yellow-500">Home</a>
    <a href="#services" class="hover:text-yellow-500">Services</a>
    <a href="#" class="hover:text-yellow-500">About Us</a>
    <a href="#" class="hover:text-yellow-500">Contact</a>
  </div>

  <!-- Right Side: Cart + Auth/Profile -->
  <div class="flex items-center space-x-6">
    <!-- Cart Icon -->
    <div class="relative">
      <a href="#" class="hover:text-yellow-500">
        <i class="fas fa-shopping-cart text-xl"></i>
      </a>
      {# Badge example (if you want to show number of items): #}
      <span
        class="absolute -top-3 -right-3 bg-yellow-500 text-black text-xs font-bold px-2 py-0.5 rounded-full"
        >3</span
      >
    </div>

    {% if app.user %}
    <div class="relative group">
      <button class="flex items-center space-x-2 hover:text-yellow-500">
