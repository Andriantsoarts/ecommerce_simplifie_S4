{% extends 'base.html.twig' %} {% block title %}Commande confirmée{% endblock %}
{% block body %}
<div class="container mx-auto px-4 py-8">
  <div
    class="bg-white shadow rounded-lg p-6 border border-gray-300 text-center"
  >
    <h1 class="text-3xl font-bold text-green-600 mb-4">
      ✅ Commande confirmée !
    </h1>
    <p class="text-gray-800 text-lg mb-2">Merci pour votre commande.</p>
    <p class="text-gray-700">
      <strong class="text-blue-950">Adresse de livraison :</strong>
      {{ order.deliveryAddress }}
    </p>

    <div class="mt-6">
      <a
        href="{{ path('app_home') }}"
        class="inline-flex items-center bg-yellow-500 hover:bg-blue-950 text-white font-semibold px-6 py-3 rounded transition duration-300"
      >
        <i class="fas fa-arrow-left mr-2"></i> Retour à l'accueil
      </a>
    </div>
  </div>
</div>
{% endblock %}
